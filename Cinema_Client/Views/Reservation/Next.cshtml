
@{
    ViewBag.Title = "Next";
}

<script language="JavaScript" type="text/javascript">
    function ticektschange(name, enable) {
        if (enable.checked == false) {
            //zmiana poprzedniego
            enable.checked = true;
            document.getElementById(name)
                .style.display = "block";
        }
        else {
            enable.checked = false;
            document.getElementById(name)
               .style.display = "none";
        }
    }
</script> 


<h2><MyTitle>@Session["mTitle"]</MyTitle></h2>
<h4>@ViewBag.dateTimeHall</h4>

<br />
@using (Html.BeginForm())
{
<table class="table-hover table" style="width:unset" align="center">
    <tr>    
        <td colspan=3 class="noBorder" style="width:35px;"></td>   
        <td colspan="@ViewBag.screen" style="background-color:#000000; width:35px" align="center" class="noBorder"> EKRAN </td>
        <td colspan=3 class="noBorder" style="width:35px"></td>  
    </tr>

        @for (char i = 'A'; i <= @ViewBag.lastletter; i++)
        {

            <tr>
                <td align="center">@i</td>
                @for (int j = 1; j <= @ViewBag.columns_No; j++)
                {
                    <td align="center" style="width:35px">
                        <div class="btn-group">
                            <div class="squaredOne" data-toggle="dropdown">
                                <input type="checkbox" name="seat" value="@i@j" id="@i@j"/>
                                <label for="@i@j"  onclick="ticektschange('dl'+'@i@j' , document.getElementById('@i@j'))">@j</label>

                            </div>
                            @Html.DropDownList("ticketstype", (SelectList)ViewBag.ticketstype, htmlAttributes: new { id = "dl"+@i+""+@j, @class = "dropdown-menu", @style = "display:none" })
                        </div>
                    </td>
                }
                <td align="center">@i</td>
            </tr>
        }
</table>

<input type="submit" value="Dalej" formaction='@Url.Action("SummarySeats", "Reservation")' class="btn btn-default" />
}