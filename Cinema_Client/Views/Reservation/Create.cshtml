@model Cinema_Client.RESERVATIONS

@{
    ViewBag.Title = "Nowa rezerwacja";
}

<h2><MyTitle>Nowa rezerwacja</MyTitle></h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@ViewBag.movieTitle</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.ID_PROGRAM, "Data i godzina", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.DropDownList("DateTimeHall", (SelectList)ViewBag.DateTime, htmlAttributes: new { @class = "form-control" })
                <input type="submit" value="Dalej" formaction='@Url.Action("Next", "Reservation")' class="btn btn-default" style="margin-left:400px; margin-top:16px"/> 
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">          
                
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Powrót do Programu", "Index", "Program")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
